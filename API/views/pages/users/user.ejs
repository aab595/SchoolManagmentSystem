<%- include('../partials/_header') %>

<%- include('../partials/_sidebar') %>
    <div class="main-content">
        <div class="head">
            <h2>Utilisateur</h2>
            <button type="submit" title="Ajouter un utilisateur">
                <i class="material-icons">add</i> Ajouter
            </button>
        </div>
        <table>
            <thead>
                <th>Name</th>
                <th>Email</th>
                <th>Profil</th>
                <th>Téléphone</th>
                <th>Adresse</th>
                <th>Genre</th>
                <th>Actions</th>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.name %> </td>
                        <td><%= user.email %> </td>
                        <td><%= user.profil %> </td>
                        <td><%= user.phone %> </td>
                        <td><%= user.address %> </td>
                        <td><%= user.gender %> </td>
                        <td>
                            <button title="Modifier" class="btn-warning"><i class="material-icons">edit</i></button>
                            <button title="Supprimer" class="btn-danger"><i class="material-icons">delete</i></button>
                        </td>
                    </tr>
                <% }) %> 
            </tbody>
        </table>
        <div></div>
    </div>
<%- include('../partials/_footer') %>